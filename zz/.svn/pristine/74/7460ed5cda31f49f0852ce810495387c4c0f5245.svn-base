<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
	<head>
	    <title>资讯位置管理</title>
	    <link rel="stylesheet" th:href="@{/assets/css/jquery-ui.css}"/>
	    <link rel="stylesheet" th:href="@{/assets/js/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.css}"/>
	    <link rel="stylesheet" th:href="@{/assets/css/ui.jqgrid.css}"/>
	    <style type="text/css">
	        .margin_left_10px {
	            margin-left: 10px;
	        }
	
	        .search {
	            padding-bottom: 10px;
	            display: flex;
	            justify-content: flex-start;
	            align-items: Center;
	        }
	    </style>
	</head>
	<!-- ajax layout which only needs content area -->
	<div class="page-header">
	    <h1>资讯位置管理</h1>
	</div>
	
	<div class="row">
	    <div class="search col-sm-12">
	        <label class="control-label no-padding-right">位置类型：</label>
	        <select id="searchLocationType">
	            <option value="">全部</option>
	            <option value="TOP_INFORM">首页资讯</option>
	            <option value="SPORT_INFORM">运动资讯</option>
	            <option value="SLEEP_INFORM">睡眠资讯</option>
	            <option value="THIN_INFORM">瘦身资讯</option>
	        </select>
	        <button onclick="search()" style="margin-left: 30px;" class="btn btn-sm btn-primary fa fa-search">查询</button>
	    	<button onclick="add()" class="btn btn-sm btn-success margin_left_10px">添加</button>
	    </div>
	
	    <div class="col-xs-12">
	        <table id="grid-table"></table>
	
	        <div id="grid-pager"></div>
	        <!-- PAGE CONTENT ENDS -->
	    </div>
	    <!-- /.col -->
	</div>
	<!-- /.row -->
	
	<!-- inline scripts related to this page -->
	<script type="text/javascript" th:inline="javascript">
	    /*<![CDATA[*/
	    var scripts = [
	        null, /*[[@{/assets/js/jqGrid/jquery.jqGrid.src.js}]]*/ '',
	        /*[[@{/assets/js/jqGrid/i18n/grid.locale-cn.js}]]*/ '',
	        /*[[@{/assets/js/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.js}]]*/ '',
	        /*[[@{/assets/js/jquery-ui-timepicker-addon/jquery-ui-sliderAccess.js}]]*/ '',
	        /*[[@{/assets/js/jquery-ui-timepicker-addon/i18n/jquery-ui-timepicker-zh-CN.js}]]*/ '',
	        null
	    ]
	    
	    $('.page-content-area').ace_ajax('loadScripts', scripts, function () {
	        /* 选择器 */
	        var grid_selector = "#grid-table";
	        var pager_selector = "#grid-pager";
	
	        //调整大小为page-content宽度
	        $(window).on('resize.jqGrid', function () {
	            $(grid_selector).jqGrid('setGridWidth', $(".page-content").width());
	        })
	        //resize on sidebar collapse/expand
	        var parent_column = $(grid_selector).closest('[class*="col-"]');
	        //配置settings设置
	        $(document).on('settings.ace.jqGrid', function (ev, event_name, collapsed) {
	            if (event_name === 'sidebar_collapsed' || event_name === 'main_container_fixed') {
	                //setTimeout is for webkit only to give time for DOM changes and then redraw!!!
	                setTimeout(function () {
	                    $(grid_selector).jqGrid('setGridWidth', parent_column.width());
	                }, 0);
	            }
	        })
	
	        /* jqgrid定义 */
	        jQuery(grid_selector).jqGrid({
	            //解析从Server返回的json数据
	            jsonReader: {
	                root: "rows", // json中每行的记录
	                page: "currentPage", //json中代表当前页码的数据
	                total: "totalPageSize", //json中代表页码总数的数据
	                records: "totalRecords",//总记录数
	                repeatitems: false,//通常设置为false
	                id: "id",//解析rows中的id值,作为该行的id(默认就是id)
	            },
	            caption: "",//表格的名称
	            cellEdit: false,//设置单元格是否可点击修改,false为不可以
	            url: "inform_location/list",//请求路径
	            datatype: "json",//数据类型
	            mtype: "GET",//提交方式
	            height: 350,//jqgrid高度
	            hoverrows: true,//当为false时mouse hovering会被禁用,true时鼠标移动到行时高亮显示
	            rownumbers: false,//添加行号
	            rownumWidth: 40,//rownum列宽
	            viewrecords: true,//显示总记录数
	            altRows: true,//设置为交替表格,交替颜色区分
	            rowNum: 10,//一页显示记录条数
	            rowList: [
	                10, 20, 30
	            ],//可选的一页显示记录数
	            autowidth: true,//true，重新计算表格相对于父元素的宽度。在表格建立时执行。如果建立之后表格父元素宽度改变，需要自动调整宽度，使用setGridWidth方法来实现
	            emptyrecords: "当前获取数据为空...",//当表格没有数据时显示的提示信息，仅当viewrecords配置为true时有效。
	            loadtext: "数据加载中...",
	            pager: pager_selector,//分页元素
	            pagerpos: "center",//定义分页栏位置,left、center、right
	            pgbuttons: true,//显示分页按钮
	            pginput: true,//是否显示跳转页面输入框
	            pgtext: "{0} 共 {1} 页",//显示页数与总页数信息
	            sortname: "location",
	            sortorder: "desc",
	            recordpos: "right",//定义了记录信息的位置： left, center, right
	            /* JSON数组对象描述列的参数。 */
	            colModel: [
	                {
	                    label: '资讯位置',
	                    name: 'location',
	                    width: 80,
	                    editable: false,
	                    sortable: false,
	                    jsonmap: "location",
	                    formatter: locationFormatter
	                }, {
	                    label: '资讯id',
	                    name: 'informId',
	                    width: 80,
	                    edittable: false,
	                    sortable: false,
	                    jsonmap: "informId",
	                }, {
	                    label: '标题',
	                    name: "title",
	                    width: 80,
	                    edittable: false,
	                    sortable: false,
	                    jsonmap: "title",
	                }, {
	                    label: '添加时间',
	                    name: "createTime",
	                    width: 80,
	                    editable: false,
	                    sortable: false,
	                    jsonmap: "createTime",
	                }, {
	                    label: '排序',
	                    name: "sort",
	                    width: 50,
	                    editable: false,
	                    sortable: false,
	                    jsonmap: "sort",
	                }, {
	                    label: '状态',
	                    name: "state",
	                    width: 50,
	                    editable: false,
	                    sortable: false,
	                    jsonmap: "state",
	                    formatter: stateFormatter
	                }, {
	                    label: '操作',
	                    width: 80,
	                    align: 'center',
	                    formatter: initOper,
	                }
	            ],
	            //在所有数据加载进入表格和所有处理已经完成后触发。在排序，分页等操作后也会触发。
	            loadComplete: function () {
	                var table = this;
	                setTimeout(function () {
	                    //加载完成后，替换分页按钮图标
	                    updatePagerIcons(table);
	                }, 0)
	            }
	        })
			
	        locationFormatter
	        //将状态格式化
        	function stateFormatter(cellvalue, options, cell) {
            	if ('OFF' === cellvalue) {
                	return '下线'
            	} else if ('NOMAL' === cellvalue) {
                	return '正常'
            	}
        	}
	        function locationFormatter(cellvalue, options, cell) {
            	if ('' === cellvalue) {
                	return '全部'
            	} else if ('TOP_INFORM' === cellvalue) {
                	return '首页资讯'
            	} else if ('SPORT_INFORM' === cellvalue) {
                	return '运动资讯'
            	} else if ('SLEEP_INFORM' === cellvalue) {
                	return '睡眠资讯'
            	} else if ('THIN_INFORM' === cellvalue) {
                	return '瘦身资讯'
            	}
        	}
	        
	      	//初始化操作栏目
	        function initOper(value, grid, rows, state) {
	            var id = rows.id;
	            var edit = "edit('" + id + "')";
	            var del = "del('" + id + "')";
	            var isDel = "";
	            if(rows.state == 'NOMAL') {
					isDel = "下线";	            	
	            } else if(rows.state == 'OFF') {
	            	isDel = "上线";
	            }
	            var template = "<button class='btn btn-xs btn-primary' onclick=\"" + edit + "\"><i class='ace-icon fa fa-pencil align-top bigger-125'></i>编辑</button>";
	            template += "<button style='margin-left: 10px;' class='btn btn-xs btn-danger' onclick=\"" + del + "\"><i class='ace-icon fa fa-trash-o align-top bigger-125'></i>"+isDel+"</button>"
	            return template;
	        }
	      	
	        //替换分页按钮为奥森字体图标
	        function updatePagerIcons(table) {
	            var replacement = {
	                'ui-icon-seek-first': 'ace-icon fa fa-angle-double-left bigger-140',
	                'ui-icon-seek-prev': 'ace-icon fa fa-angle-left bigger-140',
	                'ui-icon-seek-next': 'ace-icon fa fa-angle-right bigger-140',
	                'ui-icon-seek-end': 'ace-icon fa fa-angle-double-right bigger-140'
	            };
	            $('.ui-pg-table:not(.navtable) > tbody > tr > .ui-pg-button > .ui-icon').each(function () {
	                var icon = $(this);
	                var $class = $.trim(icon.attr('class').replace('ui-icon', ''));
	
	                if ($class in replacement)
	                    icon.attr('class', 'ui-icon ' + replacement[$class]);
	            })
	        }
	
	        //触发window的resize.jqGrid事件
	        $(window).triggerHandler('resize.jqGrid');
	
	        // 必须添加
	        //==================================================================================================
	        $(document).one('ajaxloadstart.page', function (e) {
	            $(grid_selector).jqGrid('GridUnload');
	            $('.ui-jqdialog').remove();
	        });
	    })
	    /*]]>*/
	
	    // 查询按钮点击
	    function search() {
	        var locationType = $('#searchLocationType').val();
	        $('#grid-table').jqGrid('setGridParam', {
	            postData: {
	                "locationType": locationType
	            },
	        }).trigger('reloadGrid');
	    }
	
	    function add() {
	    	location.href="#page/inform_location/add_view";
	    }
	    
	 	// 编辑操作
	    function edit(id) {
	        //console.log("执行编辑操作:" + id)
	        location.href = "#page/inform_location/edit_view?id=" + id;
	    }

		//上下线功能
	    function del(id) {
	        $.post("inform_location/del",
	            {id: id},
	            function (data) {
	                if (0 === data.code) {
	                    $('#grid-table').trigger('reloadGrid');
	                } else {
	                    alert(data.message)
	                }
	            }),
	            "JSON"
	    }
	</script>
</html>